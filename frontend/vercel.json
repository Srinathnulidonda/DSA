{
  "rewrites": [
    {
      "source": "/auth/(.*)",
      "destination": "/auth/$1.html"
    },
    {
      "source": "/pages/(.*)",
      "destination": "/pages/$1.html"
    },
    {
      "source": "/((?!api|assets|css|js|components|templates).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}